<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OnTripFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#00000000">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="1dp"
                    card_view:contentPadding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Trip Details"-->
                        <!--android:textSize="18sp"/>-->

                        <LinearLayout
                            android:id="@+id/trip_path"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:visibility="invisible">

                            <LinearLayout
                                android:id="@+id/summary_pickup"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/custom_marker_start"
                                    android:layout_gravity="center_horizontal"/>

                                <TextView
                                    android:id="@+id/pickup_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Gate 3"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/dot_0_1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/summary_dots_hor"
                                    android:layout_gravity="center_horizontal"
                                    android:tint="@color/text_grey_light"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:textSize="16sp"
                                    android:visibility="invisible"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/summary_destination_1"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/custom_marker_end"
                                    android:layout_gravity="center_horizontal"/>

                                <TextView
                                    android:id="@+id/destination_1_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Gate 3"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/dot_1_2"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:visibility="invisible">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/summary_dots_hor"
                                    android:layout_gravity="center_horizontal"
                                    android:tint="@color/text_grey_light"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:paddingLeft="10dp"
                                    android:visibility="invisible"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/summary_destination_2"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:visibility="invisible">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/custom_marker_end"
                                    android:layout_gravity="center_horizontal"/>

                                <TextView
                                    android:id="@+id/destination_2_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Gate 3"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/dot_2_3"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:visibility="invisible">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/summary_dots_hor"
                                    android:layout_gravity="center_horizontal"
                                    android:tint="@color/text_grey_light"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:paddingLeft="10dp"
                                    android:visibility="invisible"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/summary_destination_3"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:visibility="invisible">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/custom_marker_end"
                                    android:layout_gravity="center_horizontal"/>

                                <TextView
                                    android:id="@+id/destination_3_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Gate 3"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/on_trip_edit"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:text="EDIT"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:textAlignment="center"/>

                        </LinearLayout>

                        <!--<LinearLayout-->
                            <!--android:id="@+id/edit"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:orientation="vertical">-->

                            <!--<Button-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:background="#FFFFFF"-->
                                <!--android:text="EDIT"-->
                                <!--android:textColor="@color/udacity_purple"-->
                                <!--android:layout_gravity="right"/>-->

                        <!--</LinearLayout>-->

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_gravity="center|top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="1dp"
                    card_view:contentPadding="10dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Elapsed"
                            android:textSize="18sp"
                            android:paddingRight="20dp" />

                        <Chronometer
                            android:id="@+id/time_elapsed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                android:elevation="1dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="Status : "
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-condensed"/>

                        <TextView
                            android:id="@+id/on_trip_status"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:text="Retrieving..."
                            android:textSize="24sp"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="sans-serif-condensed"/>

                    </LinearLayout>


                    <com.dd.processbutton.iml.ActionProcessButton
                        android:id="@+id/on_trip_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please Start Ride From Car's Tablet"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        custom:pb_colorNormal="@color/main_disabled_color"
                        custom:pb_colorPressed="@color/main_disabled_color"
                        android:visibility="gone"
                        android:enabled="false"
                        android:layout_marginTop="10dp"/>

                    <com.dd.processbutton.iml.ActionProcessButton
                        android:id="@+id/on_trip_continue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Continue to Next Destination"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        custom:pb_colorNormal="@android:color/holo_green_dark"
                        custom:pb_colorPressed="@android:color/holo_green_light"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"/>

                    <com.dd.processbutton.iml.ActionProcessButton
                        android:id="@+id/on_trip_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="End Ride"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        custom:pb_colorNormal="@android:color/holo_red_dark"
                        custom:pb_colorPressed="@android:color/holo_red_light"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"/>

                    <com.dd.processbutton.iml.ActionProcessButton
                        android:id="@+id/on_trip_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancel Ride"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        custom:pb_colorNormal="@android:color/holo_red_dark"
                        custom:pb_colorPressed="@android:color/holo_red_light"
                        android:visibility="gone"
                        android:layout_marginTop="10dp" />


                    <com.dd.processbutton.iml.ActionProcessButton
                        android:id="@+id/on_trip_done"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DONE"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        custom:pb_colorNormal="@android:color/holo_green_light"
                        custom:pb_colorPressed="@android:color/holo_green_light"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </fragment>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>