<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.guc.ahmed.callingapp.fragments.ValidateFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/guc_mail_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your GUC mail"
            />

        <com.dd.processbutton.FlatButton
            android:id="@+id/verify_button"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send verification mail"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            custom:pb_colorNormal="@color/colorAccent"
            custom:pb_colorPressed="@android:color/holo_blue_dark" />
    </LinearLayout>

</RelativeLayout>
